// swapvals.cpp - gets two values from user, swaps them
// QINGYUN ZHANG, 10/6/2014

#include <iostream>
using namespace std;



// change main where instructed in UPPER CASE below
int main() {
    
  int value=500;
  char str[10]="Good luck";
  char *ptr=str;

  cout << &value;
  cout << value;
  cout << &ptr;
  cout << ptr;
  cout << *ptr;
  cout << ptr[2];

  return 0;
}


 
     
